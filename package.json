{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "prisma generate && run-s build:* && remix build",
		"build:sass": "sass styles/:styles/",
		"build:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer",
		"clean": "rimraf ./build ./.cache ./public/build ./app/styles ./.netlify",
		"dev": "run-p dev:*",
		"dev:remix": "remix dev",
		"dev:styles": "run-p styles:*",
		"postinstall": "prisma generate",
		"reinstall": "rimraf ./node_modules ./package-lock.json && npm install",
		"start": "run-s clean && cross-env NODE_ENV=production npm run build && netlify serve",
		"styles:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer --watch",
		"styles:sass": "sass --watch styles/:styles/",
		"typecheck": "tsc -b"
	},
	"dependencies": {
		"@netlify/functions": "^1.3.0",
		"@remix-run/netlify": "^1.16.0",
		"@remix-run/node": "^1.16.0",
		"@remix-run/react": "^1.16.0",
		"@types/bcrypt": "^5.0.0",
		"@types/uuid": "^9.0.1",
		"bcrypt": "^5.1.0",
		"cloudinary": "^1.36.4",
		"clsx": "^1.2.1",
		"cross-env": "^7.0.3",
		"focus-trap-react": "^10.1.1",
		"lodash": "^4.17.21",
		"nodemailer": "^6.9.1",
		"npm": "^8.19.4",
		"prisma": "^4.13.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^6.0.3",
		"react-stately": "^3.22.0",
		"react-transition-group": "^4.4.5",
		"react-youtube": "^10.1.0",
		"remix-utils": "^6.3.0",
		"ssr-window": "^4.0.2",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@prisma/client": "^4.13.0",
		"@remix-run/dev": "^1.16.0",
		"@remix-run/eslint-config": "^1.16.0",
		"@remix-run/serve": "^1.16.0",
		"@types/lodash": "^4.14.194",
		"@types/nodemailer": "^6.4.6",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.1",
		"@types/react-transition-group": "^4.4.5",
		"@types/youtube-player": "^5.5.7",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.39.0",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.23",
		"postcss-cli": "^10.0.0",
		"rimraf": "^5.0.0",
		"rmx-cli": "^0.3.6",
		"sass": "^1.62.1",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=16"
	}
}

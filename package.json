{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"postinstall": "npm run build",
		"build": "run-s clean build:* && remix build",
		"build:sass": "sass styles/:styles/",
		"build:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer",
		"clean": "rimraf ./build ./.cache ./public/build ./app/styles",
		"dev": "run-p dev:*",
		"dev:styles": "run-p styles:*",
		"dev:remix": "remix dev",
		"start": "npm run build && run-p start:*",
		"start:remix": "node server.js",
		"start:styles": "run-p styles:*",
		"styles:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer --watch",
		"styles:sass": "sass --watch styles/:styles/"
	},
	"dependencies": {
		"@prisma/client": "^4.7.1",
		"@remix-run/express": "^1.6.7",
		"@remix-run/node": "^1.6.7",
		"@remix-run/react": "^1.6.7",
		"@remix-run/serve": "^1.6.7",
		"@types/bcrypt": "^5.0.0",
		"bcrypt": "^5.1.0",
		"cloudinary": "^1.32.0",
		"clsx": "^1.2.1",
		"compression": "^1.7.4",
		"express": "^4.18.1",
		"focus-trap-react": "^10.0.0",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"nodemailer": "^6.7.8",
		"npm": "^8.19.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^6.0.3",
		"react-stately": "^3.17.0",
		"react-transition-group": "^4.4.5",
		"react-youtube": "^10.1.0",
		"remix-utils": "^3.3.0",
		"ssr-window": "^4.0.2"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.7",
		"@remix-run/eslint-config": "^1.6.7",
		"@types/lodash": "^4.14.186",
		"@types/nodemailer": "^6.4.6",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@types/react-transition-group": "^4.4.5",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.20.0",
		"nodemon": "^2.0.19",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.0.0",
		"prisma": "^4.7.1",
		"rimraf": "^3.0.2",
		"rmx-cli": "^0.3.1",
		"sass": "^1.54.3",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=14"
	},
	"browserslist": [
		"last 4 versions",
		"> .2%",

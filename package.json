{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:* && remix build",
		"build:sass": "sass styles/:styles/",
		"build:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer",
		"clean": "rimraf ./build ./.cache ./public/build ./app/styles ./.netlify",
		"dev": "run-p dev:*",
		"dev:remix": "remix dev",
		"dev:styles": "run-p styles:*",
		"reinstall": "rimraf ./node_modules ./package-lock.json && npm install",
		"start": "run-s clean && npm run build && cross-env NODE_ENV=development netlify serve",
		"start:styles": "run-p styles:*",
		"styles:css": "postcss styles/**/*.css --dir app/styles --use autoprefixer --watch",
		"styles:sass": "sass --watch styles/:styles/",
		"typecheck": "tsc -b"
	},
	"dependencies": {
		"@netlify/functions": "^1.3.0",
		"@remix-run/netlify": "^1.10.1",
		"@remix-run/node": "^1.10.1",
		"@remix-run/react": "^1.10.1",
		"@types/bcrypt": "^5.0.0",
		"@types/uuid": "^9.0.0",
		"bcrypt": "^5.1.0",
		"cloudinary": "^1.32.0",
		"clsx": "^1.2.1",
		"cross-env": "^7.0.3",
		"focus-trap-react": "^10.0.0",
		"lodash": "^4.17.21",
		"nodemailer": "^6.7.8",
		"npm": "^8.19.3",
		"prisma": "^4.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^6.0.3",
		"react-stately": "^3.17.0",
		"react-transition-group": "^4.4.5",
		"react-youtube": "^10.1.0",
		"remix-utils": "^6.0.0",
		"ssr-window": "^4.0.2",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@prisma/client": "^4.8.1",
		"@remix-run/dev": "^1.10.1",
		"@remix-run/eslint-config": "^1.10.1",
		"@remix-run/serve": "^1.10.1",
		"@types/lodash": "^4.14.186",
		"@types/nodemailer": "^6.4.6",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"@types/react-transition-group": "^4.4.5",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.27.0",
		"nodemon": "^2.0.19",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.0.0",
		"rimraf": "^3.0.2",
		"rmx-cli": "^0.3.1",
		"sass": "^1.54.3",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=16"
	}
}

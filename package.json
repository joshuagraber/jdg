{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "sass app/:app && remix build",
		"start": "cross-env NODE_ENV=production node ./server.js",
		"start:remix": "remix dev",
		"start:sass": "sass --watch app/:app/",
		"dev": "remix build && run-p \"dev:*\"",
		"dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
		"dev:remix": "remix watch"
	},
	"dependencies": {
		"@remix-run/express": "^1.6.7",
		"@remix-run/node": "^1.6.7",
		"@remix-run/react": "^1.6.7",
		"clsx": "^1.2.1",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"express": "^4.18.1",
		"morgan": "^1.10.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"ssr-window": "^4.0.2"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.7",
		"@remix-run/eslint-config": "^1.6.7",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"eslint": "^8.20.0",
		"nodemon": "^2.0.19",
		"npm-run-all": "^4.1.5",
		"prop-types": "^15.8.1",
		"rmx-cli": "^0.3.1",
		"sass": "^1.54.3"
	},
	"engines": {
		"node": ">=14"
	}
}

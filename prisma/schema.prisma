generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Users
enum Role {
  ADMIN
  COLLABORATOR
  USER
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  comments    Comment[]
  email       String    @unique
  password    String
  name_first  String
  name_middle String
  name_last   String
  posts       Post[]
  role        Role      @default(USER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Blog
model Bookmark {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  // Not currently using images for these, but want to be part of db
  image_url String   @default("")
  tagline   String
  title     String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Not currently using comments, but want to be part of the db
model Comment {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  author         User   @relation(fields: [author_id], references: [id])
  author_id      String @db.ObjectId
  author_email   String
  author_website String
  content        String
  post           Post   @relation(fields: [post_id], references: [id])
  post_id        String @db.ObjectId
}

model Post {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  author              User      @relation(fields: [author_id], references: [id])
  author_id           String    @db.ObjectId
  comments            Comment[]
  content             String
  images              String[]
  image_featured      String
  image_featured_alt String    @default("")
  slug                String    @unique
  tagline             String
  tags                String[]
  title               String
  published_at        DateTime
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

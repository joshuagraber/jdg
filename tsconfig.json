{
	"include": [
		"app/**/*.ts",
		"tests/**/*.ts",
		"config/**/*.ts",
		"types/**/*.ts",
		"server/**/*.ts",
		"other/**/*.ts",
		"prisma/**/*.ts",
		"app/**/*.tsx",
		"tests/**/*.tsx",
		"config/**/*.tsx",
		"types/**/*.tsx",
		"server/**/*.tsx",
		"./*.ts"
	],
	"compilerOptions": {
		"isolatedModules": true,
		"jsx": "react-jsx",
		"module": "preserve",
		"target": "ES2022",
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noUncheckedIndexedAccess": true,
		"noEmit": true,
		"paths": {
			"@prisma/client": ["./node_modules/@prisma/client"],
			"#app/*": ["./app/*"],
			"#tests/*": ["./tests/*"],
			"@/icon-name": [
				"./app/components/ui/icons/name.d.ts",
				"./types/icon-name.d.ts"
			]
		}
	},
	// "compilerOptions": {
	// 	"esModuleInterop": true,
	// 	"skipLibCheck": true,
	// 	"paths": {
	// 		"@prisma/client": ["./node_modules/@prisma/client"],
	// 		"#app/*": ["./app/*"],
	// 		"#tests/*": ["./tests/*"],
	// 		"@/icon-name": [
	// 			"./app/components/ui/icons/name.d.ts",
	// 			"./types/icon-name.d.ts"
	// 		]
	// 	}
	// },
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"build",
		"dist",
		"public",
		"coverage",
		".cache"
	]
}
